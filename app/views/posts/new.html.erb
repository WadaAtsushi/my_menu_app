
<div class="container mx-auto" style="margin-top: 40px">
<h1>新規投稿</h1>

  <%= form_for(@post, url: post_create_path, multipart: true) do |f| %>
    <div class="post-new-label">
      <%= f.label :title %>
    </div>
      <%= f.text_field :title, class: "form-control" %>
    <div class="post-new-label">
      <%= f.label :content %>
    </div>
      <%= f.text_area :content, class: "form-control" %>
    <div class="post-new-label" >
      <%= f.label :image %>
    </div>
      <%= f.file_field :image %>
    <div class="post-new-label">
      <%= f.submit "投稿", class: "btn btn-primary post-new-label" %>
    </div>

  <% end %>
</div>